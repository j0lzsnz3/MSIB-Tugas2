<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operator +"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/btnOperatorPlus"/>

    <Button android:id="@+id/btnOperatorMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operator -"
            app:layout_constraintStart_toEndOf="@+id/btnOperatorPlus"
            app:layout_constraintTop_toTopOf="@+id/btnOperatorPlus"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnOperatorDiv"/>

    <Button android:id="@+id/btnOperatorDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operator /"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnOperatorMin"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>

    <Button android:id="@+id/btnOperatorTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operator X"
            app:layout_constraintTop_toBottomOf="@+id/btnOperatorPlus"
            app:layout_constraintStart_toStartOf="@+id/btnOperatorPlus"/>

    <Button android:id="@+id/btnOperatorModulus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operator %"
            app:layout_constraintTop_toBottomOf="@+id/btnOperatorMin"
            app:layout_constraintStart_toStartOf="@+id/btnOperatorMin"/>

</androidx.constraintlayout.widget.ConstraintLayout>